# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/movoai

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_bot_username

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@movoai.com
EMAIL_FROM_NAME=MovoAI

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Application Configuration
APP_NAME=MovoAI API
APP_VERSION=1.0.0
DEBUG=True
FRONTEND_URL=http://localhost:5173

# Security Configuration
RATE_LIMIT_PER_MINUTE=5
CODE_EXPIRY_MINUTES_SMS=5
CODE_EXPIRY_MINUTES_EMAIL=10
MAX_CODE_ATTEMPTS=3
MAX_CODES_PER_HOUR=3
